<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quizLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top">

    <EditText
        android:id="@+id/quizEditorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"/>

    <ScrollView
        android:id="@+id/quizEditorScrollContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4">

        <LinearLayout
            android:id="@+id/quizEditorContentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/quizEditorFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.4">
    </LinearLayout>

    <Button
        android:id="@+id/quizEditorAddQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8px"
        android:text="Frage hinzufÃ¼gen" />

    <Button
        android:id="@+id/quizEditorSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8px"
        android:text="Quiz speichern" />

    <Button
        android:id="@+id/quizEditorReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8px"
        android:text="Quiz verwerfen" />
</LinearLayout>